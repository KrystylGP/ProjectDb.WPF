<Window x:Class="ProjectDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectDb"
        mc:Ignorable="d"
        Title="PROJEKT" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <Button Name="LoadProjectsButton" Content="Ladda Projekt" Click="LoadProjectsButton_Click" Width="150" Margin="5"/>
            <Button Name="EditProjectButton" Content="Redigera Projekt" Click="EditProjectButton_Click" Width="150" Margin="5"/>

            <ListBox x:Name="ProjectsListBox" Width="Auto" Height="300" Margin="5"
            SelectionChanged="ProjectsListBox_SelectionChanged"/>
            
        </StackPanel>
    </Grid>
</Window>
